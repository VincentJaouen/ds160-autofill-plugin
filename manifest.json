{
  "name": "Auto Fill",
  "short_name": "Auto Fill",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Auto Fill",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
     "tabs",
     "storage",
     "unlimitedStorage",
     "*://*/*"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon16.png",
      "38": "images/icon32.png"
    },
    "default_icon": "icons/icon32.png",
    "default_title": "Auto Fill"
  },
  "browser_action": {
    "default_icon": "icons/icon16.png",
    "default_popup": "html/popup.html"
  },
  "background": {
	"scripts": ["js/jquery.js","js/background.js","js/utils.js"]
  },
  "content_scripts": [{
      "matches": [ "*://ceac.state.gov/GenNIV/*"],
      "js":  [ "js/jquery.js","js/utils.js","js/pages.js","js/content.js"],
      "css": ["css/form.css"],
      "run_at": "document_end"
    }
  ]
}
